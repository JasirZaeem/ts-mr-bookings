{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignoreUnknown": true,
		"ignore": ["**/tsconfig*", ".gmrc", "./packages/schema/src/models/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": {
					"level": "error"
				},
				"noUnusedVariables": {
					"level": "error"
				}
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	}
}
