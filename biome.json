{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignoreUnknown": true,
		"ignore": ["**/tsconfig*", ".gmrc"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": {
					"level": "error"
				},
				"noUnusedVariables": {
					"level": "error"
				}
			}
		}
	}
}
